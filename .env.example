# SmartThings OAuth Configuration
SMARTTHINGS_CLIENT_ID=your_client_id_here
SMARTTHINGS_CLIENT_SECRET=your_client_secret_here
SMARTTHINGS_REDIRECT_URI=http://localhost:3000/auth/smartthings/callback

# Server Configuration
PORT=3000
WEB_PORT=3000
# HAP_PORT: HomeKit Accessory Protocol port
# Default: 52826 (avoid conflict with Homebridge which uses 51826)
# Note: If running alongside Homebridge, use a different port
HAP_PORT=52826
# HAP_PINCODE: HomeKit pairing PIN code (format: XXX-XX-XXX)
HAP_PINCODE=942-37-286
# HAP_BRIDGE_USERNAME: Bridge MAC address (must be unique on network)
# Default: CC:22:3D:E3:CE:F6
# WARNING: Changing this will break existing HomeKit pairings!
# Note: Uses F6 (not F7) to match existing pairing data
HAP_BRIDGE_USERNAME=CC:22:3D:E3:CE:F6
SESSION_SECRET=your-random-session-secret-here

# Storage Paths
AUTH_TOKEN_PATH=./data/smartthings_token.json
DEVICE_STATE_PATH=./data/device_state.json

# Device Configuration (comma-separated device IDs for lighting monitor)
LIGHTING_MONITOR_DEVICES=device1,device2,device3,device4

# Update Intervals (in seconds)
DEVICE_POLL_INTERVAL=300
LIGHTING_CHECK_INTERVAL=60